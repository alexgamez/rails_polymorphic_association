<h1>Books</h1>

<%= render partial: 'shared/flash_alerts' %>
 
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th></th>
        <th></th>
    </tr>
 
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.genre %></td>
            <td><%= link_to 'View', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete,
                                        data: { confirm: 'Are you crazy ?' } %>
            </td>
        </tr>
    <% end %>
</table>
<br />
<%= link_to 'Add a book', new_book_path %>